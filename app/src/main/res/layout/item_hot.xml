<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:id="@+id/iv_hot_img"
        android:layout_alignParentLeft="true"
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/tv_hot_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:maxLines="2"
        android:layout_alignTop="@id/iv_hot_img"
        android:layout_toRightOf="@id/iv_hot_img"
        android:layout_marginLeft="5dp"
        android:ellipsize="end"
        android:textSize="14sp"
        android:textColor="#000000"
        android:text="这是一个新闻的标题这是一个新闻的标题这是一个新闻的标题这是一个新闻的标题是一个新闻的标题"
        />

    <TextView
        android:id="@+id/tv_hot_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_hot_img"
        android:layout_toRightOf="@id/iv_hot_img"
        android:text="中华新闻网"
        style="@style/GrayText"
        />

    <TextView
        android:id="@+id/tv_hot_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/iv_hot_img"
        android:layout_marginRight="10dp"
        style="@style/GrayText"
        android:text="23564跟帖"
        />

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_hot_zt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#eeeeee"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/iv_hot_img"
        android:layout_marginRight="10dp"
        style="@style/GrayText"
        android:text="专题"
        />

</RelativeLayout>